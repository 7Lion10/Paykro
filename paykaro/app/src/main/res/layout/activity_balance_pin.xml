<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff">

    <!-- Cancel Button -->
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#606060"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="18sp" /> <!-- Standardized text size -->

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="342dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <!-- Bank and To Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#F0F0F0"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Standardized text size -->

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HDFC Bank XXXX1518"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/alert_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:tint="#FF9800"
                tools:ignore="UseAppTint" />
        </LinearLayout>

        <!-- Enter UPI PIN Prompt -->
        <TextView
            android:id="@+id/upi_pin_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="ENTER 6-DIGIT UPI PIN"
            android:textColor="#000000"
            android:textSize="18sp" /> <!-- Standardized text size -->

        <!-- UPI PIN Input -->
        <EditText
            android:id="@+id/upi_pin_input"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:gravity="center"
            android:hint="• • • • • •"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:padding="0dp"
            android:textColor="#000000"
            android:textSize="24sp" /> <!-- Larger size for visibility -->


        <!-- Pay Button -->
        <Button
            android:id="@+id/check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF5722"
            android:text="Check"
            android:textColor="#FFFFFF"
            android:textSize="18sp" /> <!-- Standardized text size -->

    </LinearLayout>
</RelativeLayout>
