<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".confirmPayment">

    <!-- Success Icon -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/ic_launcher_done" />

    <!-- Amount Paid -->
    <TextView
        android:id="@+id/amount_paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="â‚¹0"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Payee Information -->
    <TextView
        android:id="@+id/payee_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid to Jatin Arora"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <!-- UPI ID -->
    <TextView
        android:id="@+id/upi_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPI ID: arorajatin120@oksbi"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="4dp" />

    <!-- Transaction Date -->
    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26 Aug 2024, 03:45 PM"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <!-- Transaction ID -->
    <TextView
        android:id="@+id/transaction_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPI transaction ID: 428320068316"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="4dp" />

    <!-- Done Button -->
    <Button
        android:id="@+id/done_button"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:backgroundTint="#FF5722"
        android:text="Done"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp" />



</LinearLayout>
